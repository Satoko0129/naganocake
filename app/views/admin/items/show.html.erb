<div class="container mt-5">
  <h3 class="mt-5 text-container"><strong>商品詳細</strong></h3>
  <div class="row align-items-start">

    <div class="col-lg">
      <%= image_tag @item.get_image(300,400) %>
    </div>

    <div class="col-lg">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <th>
            税込価格<br>
            (税抜価格)
            </th>
            <td><%= @item.tax_in_price.to_s(:delimited) %> (<%= @item.price %>) 円</td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
            <p class="text-success">販売中</p>
            <% else %>
            <p class="text-secondary">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
    <p><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %></p>
</div>