<div class="container">
  <h3 class="mt-5 text-center"><%= full_name(@customer) %>さんの会員情報編集</h3>
    <div class="row d-flex justify-content-center">
      <%= form_with model :@customer, url: admin_customer_path, local: true do |f| %>
        <div class="col-10 offset-1">
          <div class="form-group col-xs-9">
            <%= f.label :"会員ID", class: "col-sm-4" %>
            <%= f.label :@customer.id %>
          </div>

          <div class="form-group col-xs-9">
            <%= f.label :"氏名", class: "col-sm-4 control-label" %> <!--label要素にはcontrol-labelというclassをつけた上でグリッドシステムで幅を指定 -->
            <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static" %>
            <%= f.text_field :first_name, class: "col-sm-3 form-control-static" %>
          </div>
        </div>
    </div>
</div>