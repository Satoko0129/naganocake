<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h3 class="my-5"><%= @customer.full_name %>さんの会員詳細</h3>
        <div class="d-flex align-items-center">
          <table class="table table-borderless">
            <tr>
              <th class="text-center">会員ID</td>
              <td><%= @customer.id %></td>
            </tr>

            <tr>
              <th class="text-center">氏名</th>
              <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
            </tr>

            <tr>
              <th class="text-center">フリガナ</th>
              <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
            </tr>

            <tr>
              <th class="text-center">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
              <th class="text-center">住所</th>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
              <th class="text-center">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
              <th class="text-center">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>

            <tr>
              <th class="text-center">会員ステータス</th>
              <% if @customer.is_deleted == true %>
              <td class="text-secondary">退会済み</td>
              <% else %>
              <td class="text-success">有効</td>
              <% end %>
            </tr>

            <tr>
              <td></td>
              <td>
                <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
                <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
              </td>
            </tr>

          </table>
      </div>
    </div>
  </div>
</div>