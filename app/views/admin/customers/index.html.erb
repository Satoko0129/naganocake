<div class="container">
  <h3 class="my-5">会員一覧</h3>
    <div class="row d-flex justify-content-center">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <th scope="row">
              <%= customer.id %>
            </td>

            <td class="text-left">
             <%= link_to customer.full_name, admin_customer_path(customer) %>
            </td>

            <td class="text-left">
              <%= customer.email %>
            </td>

            <td class="col-xs-2">
              <% if customer.is_deleted == true %>
              <p class="text-secondary">退会済</p>
              <% else %>
              <p class="text-success">有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers, theme: 'bootstrap-5' %> 
    </div>
</div>