<div class="container">
  <h3 class="my-5">会員一覧</h3>
    <div class="row d-flex justify-content-center">
      <tabel class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <%= @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1">
              <%= customer.id %>
            </td>

            <td class="text-left">
             <%= link_to customer.full_name, admin_customer_path(customer) %>
            </td>

            <td class="text-left">
              <%= customer.email %>
            </td>

            <td class="col-xs-2">
              <% if @customer.is_active == true %>
              <p class="text-secondary">退会済</p>
              <% else %>
              <p class="text-success">有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </tabel>
    </div>
</div>