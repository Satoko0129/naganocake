<div class="container">
  <h3 class="my-5 text-center">注文履歴詳細</h3>
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <table class="table table-borderless">
        <thead>
          <tr><th>購入者</th><td><%= @order.customer.full_name %></td></tr>
          <tr><th>注文日</th><td><%= l @order.created_at %></td></tr>
          <tr><th>配送先</th><td>〒<%= full_address(@order) %></td></tr>
          <tr><th>支払方法</th><%= @order.method_of_payment %></tr>
          <tr>
            <th>注文ステータス</th>
              <td>
                <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                <%= f.select :status, Order.status.keys, class: "update_status" %>
                <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>
              </td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-xs-8">
    <table class="table table-hover table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>

      <tbody>
        <%= @order.order_details.each do |order_detail| %>
          <tr>
            <td><p><%= order_detail.item.name %></p></td>
            <td><p><%= order_detail.item.tax_in_price %></p></td>
            <td><p><%= order_detail.item.quantity %></p></td>
            <td><p><%= order_detail.subtotal(order_detail) %></p></td>
            <td>
              <%= form_with model: @order_detail, url: admin_order_detail_path(order_detail.id), method: patch, local: true do %>
              <%= f.select :making_status, OrderDetail.making_status.keys, class: "making_status" %>
              <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-xs-3 offset-1">
    <table class="table">
      <tr>
        <th><strong>商品合計</strong></th>
        <td class="text-right col-xs-5"><%= total_price(@order.order_details) %></td>
      </tr>
      
      <tr>
        <th><strong>送料</strong></th>
        <td class="text-right col-xs-5"><%= @order.postage %></td>
      </tr>
      
      <tr>
        <th><strong>請求合計金額</strong></th>
        <td class="text-right col-xs-5"><%= total_price(@order.order_details) + @order.postage %></td>
      </tr>
    </table>
    </div>
  </div>
</div>