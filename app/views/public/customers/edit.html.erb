<div class="container mt-5">
<div class="row">
  <div class="col-xs-12">
    <h3><strong>会員情報編集</strong></h3>
    <%= form_with model: @customer, url: customers_information_path , method: :PATCH do |f| %>

      <div>
        <div class="col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
          <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.text_field :last_name_kana, class: "last_name_kana col-sm-3 form-control-static name", style: "margin: 10px;" %>
          <%= f.text_field :first_name_kana, class: "first_name_kana col-sm-3 form-control-static name", style: "margin: 10px;" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"郵便番号", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.text_field :postal_code, class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"住所", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.text_field :address, class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"電話番号", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.text_field :telephone_number, class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
        </div>

        <div class="col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
        </div>
      </div>

      <div class="col-xs-10 col-xs-offset-2">
        <p>
          <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %>
          <%= link_to "退会する", costomers_quit_path, class: "btn btn-danger ml-5" %> <!--退会確認画面へ遷移-->
        </p>
      </div>
    <% end %>
  </div>
</div>
</div>