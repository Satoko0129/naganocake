<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12">
      <h3>注文履歴一覧</h3>
        <%= if @order.present? %>
          <table class="table table-hover table-bordered">
            <thead class="table-light">
              <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
              </tr>
            </thead>

            <tbody>
              <%= @orders.each do |order| %>
              <tr>
                <td>
                  <%= l order.created_at, format: :short %>
                </td>

                <td>
                  <%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>

                <td>
                  <%= @order_details.each do |order_detail| %>
                    <%= order_detail.item.name %><br>
                  <% end %>
                </td>

                <td>
                  <%= order.total_payment.to_s(:delimited) %>円
                </td>

                <td><%= order.status %></td>

                <td><%= link_to "注文詳細" order_path(order), class: "btn btn-primary" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>注文履歴がありません。</p>
    </div>
  </div>
</div>