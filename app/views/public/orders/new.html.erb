<div class="container mt-5 mx-auto">
  <h4>注文情報入力</h4>
  <%= form_with model: @order, url: "/orders/log", method: :post, local: true do |f| %>
  
    <h5>支払い方法</h5>
        <p>
          <%= f.radio_button :payment_method,:クレジットカード,checked: "checked" %>
          <%= f.label :payment_method, "クレジットカード" %>
         <br>
          <%= f.radio_button :payment_method, :銀行振込 %>
          <%= f.label :payment_method, "銀行振込" %>
        </p>
  
    <h5>お届け先</h5>
     <%= f.radio_button :address_option, 0, checked: "checked" %> <!--checked:予めbuttn選択される-->
        <%= f.label :order_address, "ご自身の住所" %>
     <br>
       〒<%= current_customer.postal_code %> <!--郵便番号-->
          <%= current_customer.address %><br>　<!--住所-->
          <%= current_customer.last_name %><%= current_customer.first_name %>　<!--名前-->
     <br>
  
     <%= f.radio_button :address_option, 1 %>   <!--[:address_option]=="1"が呼出　送る-->
        <%= f.label :order_address, "登録済住所から選択" %>
    <br>
                            <!--カラム名    #要素の配列  #value属性の項目-->
    <%= f.collection_select :customer_id, @addresses, :id, :full_adresses %>
  　　　　<!--第一引数メソッド名　:customer_id　にひもづく　adresses
                       #コントローラの　@addresses = current_customer.addresses.all
                                      #　:id, :full_adresses　カラムとってくる-->
  
    <%= f.radio_button :address_option, 2 %>
      <%= f.label :order_address, "新しいお届け先" %>
       　<table>
           <tr>
             <td><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
             <td><%= f.text_field :postal_code, autoforcus: true, placeholder: "0000000" %></td>
          </tr>
          <tr>
             <td><%= f.label :address, "住所" %></td>
             <td><%= f.text_field :address, autoforcus: true, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          </tr>
           <tr>
             <td><%= f.label :name, "宛名" %></td>
             <td><%= f.text_field :name, autoforcus: true, placeholder: "令和道子" %></td>
           </tr>
       </table>
     <%= f.submit "確認画面へ進む" %>
  
  <%end%>
</div>