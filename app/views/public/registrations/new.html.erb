<div class="container mt-5">
  <div class="row">
    <div class="col-lg-10">
      <h3><strong>新規会員登録</strong></h3>

    <%= form_with model: @customer, url: customer_registration_path do |f| %>

      <div>
          <div class="col-xs-12">
            <%= f.label :"名前", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.text_field :last_name, autoforcus: true, placeholder: "令和", class: "last_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
            <%= f.text_field :first_name, autoforcus: true, placeholder: "道子", class: "first_name col-sm-3 form-control-static name", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"フリガナ", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.text_field :last_name_kana, autoforcus: true, placeholder: "レイワ", class: "last_name_kana col-sm-3 form-control-static name", style: "margin: 10px;" %>
            <%= f.text_field :first_name_kana, autoforcus: true, placeholder: "ミチコ", class: "first_name_kana col-sm-3 form-control-static name", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.text_field :postal_code, autoforcus: true, placeholder: "0000000", class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"住所", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.text_field :address, autoforcus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"電話番号", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.text_field :telephone_number, autoforcus: true, placeholder: "0000000", class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"パスワード(6文字以上)", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.password_field :password, autoforcus: true, class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>

          <div class="col-xs-12">
            <%= f.label :"パスワード(確認用)", class: "col-sm-5 control-label", style: "margin: 10px;" %>
            <%= f.password_field :password_confirmation, autoforcus: true, class: "col-sm-3 form-control-static", style: "margin: 10px;" %>
          </div>
      </div>

      <div class="col-xs-12 col-xs-offset-2 mt-5", style="position: relative; left:400px;"><!--style="はcss-->
          <p>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </p>
      </div>
    <% end %>

    <div class="col-xs-12 col-xs-offset-2", style="position: relative; left:400px;">
      <h6>会員登録がお済の方</h6>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>