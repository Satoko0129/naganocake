<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h4>配送先登録/一覧</h4>

      <div>
        <%= form_with model: @address, url: addresses_path, local: true do |f| %>
          <div class="col-xs-10">
            <div class="form-group col-xs-12">
              <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label" %>
              <%= f.text_field :postal_code, placeholder: "0000000", class: "col-xs-4 form-control-static postal_code" %>
            </div>

            <div class="form-group col-xs-12">
              <%= f.label :"住所", class: "col-xs-3 control-label" %>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-xs-7 form-control-static address" %>
            </div>

            <div class="form-group col-xs-12">
              <%= f.label :"宛名", class: "col-xs-3 control-label" %>
              <%= f.text_field :name, placeholder: "令和道子", class: "col-xs-4 form-control-static name" %>
            </div>

            <div class="ml-auto">
              <%= f.submit "新規登録", class: "col-xs-3 btn btn-success" %>
            </div>
          </div>
        <% end %>

          <div>
            <% if @addresses.present? %>
              <table class="table table-hover table-bordered">
                <thead class="thead-light ">
                  <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>

                <tbody>
                  <%= @addresses.each do |address| %>
                    <tr>
                      <td>
                        <%= address.postal_code %>
                      </td>

                      <td class="text-left">
                        <%= address.address %>
                      </td>

                      <td class="text-left">
                        <%= address.name %>
                      </td>

                      <td>
                        <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                      </td>

                      <td>
                        <%= link_to "削除する", address_path(address), method: :delete, date: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>