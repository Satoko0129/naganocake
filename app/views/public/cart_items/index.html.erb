
      <h3 class="my-5"><strong>ショッピングカート</strong></h3>
      <div class="col-xs-11" id="no_cart">
        <% if @cart_items.present? %>
        <!--presentメソッドの基本形は、(変数）.present?-->
        <!--存在を確認したい変数に対して、カンマとpresent、そして最後にクエスチョンマークを付ける。-->
        <%= link_to "カートを空にする",cart_items_path, method: :delete, data: {confirm: 'カートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
        <% end %>
      <table class="table table-hover table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <% total = 0 %> <!--合計金額totalの初期化-->
        
        <% if current_customer.cart_items.present? %> <!--カート内に商品があった場合-->
        
        <% @cart_items.each do |cart_item| %> 
          <tr>
            <th> 
              <%= image_tag(cart_item.item, :image, size: "60x50", fallback: "noimage.jpg") %> <!--商品画像-->
              <%= cart_item.item.name %> <!--商品名-->
            </th>

            <th> <!--単価-->
              <%= (cart_item.item.price*1.1).to_i.to_s(:delimited, delimiter: ',' ) %>
            </th>

            <th><!--数量-->
              <%= form_with model: @cart_item, url: cart_items_path, method: :patch, remote: true do |f| %>
              <%= f.number_field :count, min: 1, max:10 %>
              <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </th>

            <th> <!--小計-->
              <% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i.to_s(:delimited, delimiter: ',') %>　<!--小計を計算する-->
              <%= subtotal %> <!--小計を表示-->
            </th>

            <th>
              <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete, remote: true, data: {confirm: "{i.item.name}を削除してよろしいですか？", class: "btn btn-danger"} %>
            </th>
          </tr>
          <% total += subtotal %>　<!--アイテムごとに合計金額totalに反映 計算しておく-->
          <% end %>
        <% end %>
      </table>

      <%= link_to "買い物を続ける", root_path, class: "btn btn-info" %>
      
      <table class="table table-bordered text-right">
        <tr>
          <td>合計金額</td>
          <td><%= total.to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </table>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success center-block" %>
      <% else %>
      <%= render "no_cart" %>
      <% end %>
      </div>
    