<%= attachment_image_tag @item, :image size: "350x220", fallback: "noimage.jpg" %>
<h3><%= @item.name %></h3>
<p><%= @item.introduction %></p>
<% if @item.is_active == true %>
  <h5>¥<%= (@item.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %></h5>
  <p>(税込)</p>
  <%= form_with model: @cart_item, url:cart_items_path, method: :POST do |f| %> <!--カート内商品データ追加　※create  -->
    <%= f.hidden_field :item_id value: @item.id %>
    <%= f.select :count, (1..10).to_a, include_blank: "個数選択" %>
    <%= f.submit "カートに入れる", class: "btn btn-success" %>
  <% end %>
<% else %>
  <h5>売り切れ</h5>
<% end %>
