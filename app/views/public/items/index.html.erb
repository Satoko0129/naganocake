<div class="containter">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h2>商品一覧</h2><h4>(全<%= @total_items.count %>件)</h4>
    </div>
  </div>
  
  <div class="row">
    <%= @items.each do |item| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
        <%= link_to item_path(item.id) do %>
        <p class="img-wrap"></p>
      </div>
    </div>
  </div>
</div>