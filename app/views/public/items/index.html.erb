<div class="containter mt-5 mr-5 ml-5">
  <div class="row">
    <div class="col-md-2">
     <%= render 'public/searches/genre', genres: @genres %>
    </div>


    <div class="col-md-10">
      <h3>商品一覧</h3><h5>(全<%= @total_items.count %>件)</h5>
        <div class="row">
          <% @items.each do |item| %>
          <div class="col-md-3">
            <%= link_to item_path(item) do %>
         
            
            <div class="card mb-3">
              <%= image_tag item.get_image(250,250), fallback: "noimage.jpg", class: "card-img-top" %>
            <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
          
            <% if item.is_active == true %>
            <p class="card-text">
              ¥<%= (item.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %>
            </p>
            <% else %>
            <p class="card-text text-danger">
              売り切れ
            </p>
            <% end %>
  
            </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>
  </div>
    <%= paginate @items, theme: 'bootstrap-5' %>
</div>