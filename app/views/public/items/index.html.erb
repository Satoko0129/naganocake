<div class="containter mt-5 mr-5 ml-5">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h3>商品一覧</h3><h5>(全<%= @total_items.count %>件)</h5>
    </div>
  </div>

  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
        <div class="card w-80 bg-transparent border-none"> <!--width:100% backgroud:透明 border:none-->
          <%= link_to items_path(item.id) do %>
          <p class="img-wrap">
            <%= image_tag item.get_image(250,250), fallback: "noimage.jpg" %></p>
          <% end %>
          <div class="card-body">
            <p class="item-details item-name card-text"><%= item.name %></p>
            <% if item.is_active == true %>
              <p class="item-details card-text">¥<%= (item.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %></p> <!--.to_iメソッドで文字列を整数に変換-->
            <% else %>
              <p class="text-danger font-weight-bold card-text">売り切れ</p>
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
    <%= paginate(@items) %>
</div>