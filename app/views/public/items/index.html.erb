<div class="containter mt-5 mr-5 ml-5">
  <div class="row">
    <div class="col-md-3">
     <%= render 'public/searches/genre', genres: @genres %>
    </div>
    
  
    <div class="col-md-8 offset-md-1">
      <h3>商品一覧</h3><h5>(全<%= @total_items.count %>件)</h5>
    
    <% @items.each do |item| %>

        <div class="card w-50 bg-transparent border:none"> <!--width:100% backgroud:透明 border:none-->
          <%= link_to item_path(item) do %>
          <p class="img-wrap">
            <%= image_tag item.get_image(250,250), fallback: "noimage.jpg" %></p>
          <% end %>
          <div class="card-body">
            <p class="item-details item-name card-text"><%= item.name %></p>
            <% if item.is_active == true %>
              <p class="item-details card-text">¥<%= (item.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %></p> <!--.to_iメソッドで文字列を整数に変換-->
            <% else %>
              <p class="text-danger font-weight-bold card-text">売り切れ</p>
            <% end %>
          </div>
        </div>
    <% end %>
    </div>
  </div>
    <%= paginate(@items) %>
</div>