<div class="cotainer my-5">
  <div class="row">
    <div class=col>
      <div class="col-6 offset-3">
        <h3>ログイン</h3>
          <h6 class="my-3">会員の方はこちらからログイン</h6>

        <%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>

        <div class="field my-2">
          <%= f.label :"メールアドレス", class: "form-label mt-3" %><br>
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
          <!--autocomplete： "カラム名"とは自動で入力補助をしてくれる機能-->
        </div>

        <div class="field my-2">
          <%= f.label :"パスワード", class: "form-label mt-3" %><br>
          <%= f.password_field :password, autocomplete: "curret-password", class: "form-control" %>
        </div>

        <div class="actions my-2 text-center">
          <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
        </div>

        <% end %>

        <div>
          <h6 class="text-center">会員登録がお済みでない方</h6>
          <p class="text-center"><%= link_to "こちら", new_customer_registration_path %>からログインしてください。</p>
        </div>

      </div>
    </div>
  </div>
</div>



